<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
  <title>Url Shortener</title>
  <style>
    *{
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      outline: 0;
    }
    html{
      font-family: 'Roboto', sans-serif;
    }
    body{
      height: 100vh;
      width: 100%;
      background-color: #fafafa;
    }
    .title{
      height: 20%;
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .title h1{
      font-size: 40px;
      font-weight: 700;
      color: #2980b9;
      margin-right: 20px;
    }

    .title i{
      font-size: 30px;
      color: #2980b9;
    }

    .form{
      height: 80%;
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .new-url{
      height: 250px;
      border: none;
      border-radius: 10px;
      box-shadow: 0px 0px 5px #353b48;
      width: 100%;
      max-width: 600px;
      padding: 10px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    h2{
      margin-bottom: 100px;
      font-size: 30px;
      color: #353b48;
    }
    .new-url input{
      padding: 10px 20px;
      background-color: #2ecc71;
      border: none;
      width: 90%;
      max-width: 300px;
      color: #fff;
      border-radius: 5px;
      text-align: center;
      font-size: 16px;
      font-weight: 700;
      cursor: pointer;
      position: relative;
    }
    .new-url input:hover{
      background-color: #27ae60;
    }

    #copied{
      padding: 5px 10px;
      border: 1px solid #353b48;
      border-radius: 10px;
      background-color: #fafafa;
      position: absolute;
      opacity: 0;
      transition: all 0.5s;
    }

  </style>
</head>
<body>
  <div class="title">
    <h1>Url Shortener</h1>
    <i class="fas fa-link"></i>
  </div>
  <div class="form">
    <div class="new-url">
      <h2>Generated Url</h2>
      <p id="copied">Copied</p>
      <input type="text" id="url" value="<%= shorturl %>" readonly>
    </div>
  </div>

  <script>
    const url = document.querySelector('#url');
    const copied = document.querySelector('#copied');
    var eraseInterval = null;

    url.addEventListener('click', event = (event) => {
      url.select();
      document.execCommand('copy');
      copied.style.opacity = '1';
      copied.style.left = event.screenX - 30;
      copied.style.top = event.screenY - 170;
      eraseInterval = setInterval(erase, 1000);
    });

    const erase = () => {
      copied.style.opacity = '0';
      clearInterval(eraseInterval);
    }
  </script>
</body>
</html>