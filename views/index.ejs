<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

  <title>Url Shortener</title>
  <style>
    *{
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      outline: 0;
    }
    html{
      font-family: 'Roboto', sans-serif;
    }
    body{
      height: 100vh;
      width: 100%;
      background-color: #fafafa;
    }
    .title{
      height: 20%;
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .title h1{
      font-size: 40px;
      font-weight: 700;
      color: #2980b9;
      margin-right: 20px;
    }

    .title i{
      font-size: 30px;
      color: #2980b9;
    }

    .form{
      height: 80%;
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    form{
      height: 250px;
      border: none;
      border-radius: 10px;
      box-shadow: 0px 0px 5px #353b48;
      width: 100%;
      max-width: 600px;
      display: grid;
      grid-template-columns: 8fr 2fr;
      padding: 10px;
      justify-content: center;
      align-items: center;
    }
    form label{
      display: none;
    }

    form input{
      height: 50px;
      font-size: 16px;
      font-weight: 400;
      padding: 5px;
      color: #353b48;
      border-top-left-radius: 5px;
      border-bottom-left-radius: 5px;
      border: 1px solid #353b4863;
    }

    form input::placeholder{
      opacity: 0.6;
    }

    form button{
      height: 50px;
      font-size: 16px;
      font-weight: 700;
      border: none;
      border-top-right-radius: 5px;
      border-bottom-right-radius: 5px;
      background-color: #2ecc71;
      color: #fff;
      cursor: pointer;
    }

    form button:hover{
      background-color: #27ae60;
    }

  </style>
</head>
<body>
  <div class="title">
    <h1>Url Shortener</h1>
    <i class="fas fa-link"></i>
  </div>
  <div class="form">
    <form action="/shorturl" method="POST">
      <label for="fullurl">Full URL</label>
      <input 
        name="fullurl" 
        id="fullurl" 
        type="url" 
        placeholder="ex.: https://kelsonteixeira.github.io"
      >
      <button type="submit">Shrink</button>
    </form>
  </div>
</body>
</html>